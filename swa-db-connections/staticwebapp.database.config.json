{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.1.7/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('MSSQL')",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": false,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    }
  },
  "entities": {
    "Samples": {
      "source": {
        "object": "dbo.samples",
        "type": "table"
      },
      "rest": {
        "enabled": true,
        "path": "/samples",
        "methods": [ "get" ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "read"
            }
          ]
        }
      ]
    },
    "FindSamples": {
      "source": {
        "object": "web.find_samples",
        "type": "stored-procedure",
        "parameters": {
          "text": "",
          "k": 50
        }
      },
      "graphql": {
        "enabled": false,
        "operation": "query",
        "type": {
          "singular": "FindSamples",
          "plural": "FindSamples"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/findSamples",
        "methods": [
          "post", "get"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    },
    "SamplesCount": {
      "source": {
        "object": "web.get_total_sample_count",
        "type": "stored-procedure"
      },
      "graphql": {
        "enabled": false,
        "operation": "query",
        "type": {
          "singular": "SamplesCount",
          "plural": "SamplesCounts"
        }
      },
      "rest": {
        "enabled": true,
        "path": "/countSamples",
        "methods": [
          "post", "get"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    }
  }
}